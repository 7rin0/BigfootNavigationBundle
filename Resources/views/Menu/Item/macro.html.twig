{% macro element_attributes(item) %}
    {% for attrname, attrlist in item.elementArrayAttributes %}
        {{ attrname }}="{{ attrlist|join(' ') }}"
    {% endfor %}
{% endmacro %}

{% macro link_attributes(item) %}
